@model JobPortal.Models.seeker_education

@{
    ViewBag.Title = "CandidateDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-2 px-md-4">
    <div class="page-header min-height-300 border-radius-xl mt-4" style="background-image: url('https://images.unsplash.com/photo-1531512073830-ba890ca4eba2?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1920&q=80');">
        <span class="mask  bg-gradient-primary  opacity-6"></span>
    </div>
    <div class="card card-body mx-3 mx-md-4 mt-n6">
        <div class="row gx-4 mb-2">
            
            <div class="col-auto my-auto">
                <div class="h-100">
                    <h5 class="mb-1">
                        Educational details
                    </h5>
                    
                </div>
            </div>
           
        </div>
        <div class="row">
            <div class="row">
                <div class="col-12 col-xl-4">
                    
                </div>
                <div class="@*col-12 col-xl-4*@">
                    <div class="card card-plain h-100">
                        
                        <div class="card-body p-3 ">

                            <hr class="horizontal gray-light my-4">
                            <ul class="list-group list-group-item border-0 d-flex p-4 mb-2 bg-gray-100 border-radius-lg  border-primary"">

                                <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Course Name:</strong> &nbsp;@Html.DisplayFor(model => model.certificate_degree_name)</li>
                                <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Branch:</strong> &nbsp;  @Html.DisplayFor(model => model.major)</li>

                                <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">University/Institute Name:</strong> &nbsp;  @Html.DisplayFor(model => model.university_institute_name)</li>
                                <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark"> Course Startdate:</strong> &nbsp;   @Html.DisplayFor(model => model.start_date) </ li >
                                <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark"> Course Enddate:</strong> &nbsp; @Html.DisplayFor(model => model.end_date)</li>
                                <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">CGPA/Percentage:</strong> &nbsp; @Html.DisplayFor(model => model.cgpa_percentage)</li>

                                <p>
                                    @Html.ActionLink("Edit", "Edit", new { id = Model.user_account_id }) |
                                    @Html.ActionLink("Back to List", "Index")|

                                </p>

                            </ul>
                            <button> @Html.ActionLink("Experience =>", "ExperienceDetails", new { id = Model.user_account_id })</button>
                           
                        </div>
                    </div>
                </div>                             
            </div>
        </div>
    </div>
</div>