@model IEnumerable<JobPortal.Models.company>

@{
    ViewBag.Title = "Company";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Company</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.company_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.profile_description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.business_stream_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.establishment_date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.company_website_url)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.company_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.profile_description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.business_stream_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.establishment_date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.company_website_url)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "CompanyDetails", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
