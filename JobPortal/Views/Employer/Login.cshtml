@model JobPortal.Models.UserModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
function myFunction() {
var x = document.getElementById("password");
if (x.type === "password")
{
x.type = "text";
}
else
{
x.type = "password";
}
}
</script>

<center>
    <h2> Employer Login</h2>

    <div class="container-box-form">
        <h3>Login</h3>
        <hr>
        <div class="form-horizontal">
            @using (Html.BeginForm("Login", "Employer", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                if (ViewBag.Error != null)
                {
                    <span class="badge badge-danger">@ViewBag.error</span>
                }
                <div class="form-group">
                    @Html.LabelFor(model => model.email_id, htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.email_id, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.email_id, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
            @*@Html.LabelFor(model => model.password, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <label class="control-label col-md-2">Password</label>
                <div class="col-md-8">
                <div>
                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                    <br /><input type="checkbox" onclick="myFunction()">&nbsp;Show password<br /><br />
                </div>
                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
            </div>
        </div>                
                <div class="form-group text-center">

                    <input type="submit" value="Login" class="btn btn-default" />

                </div>
            }
        </div>
        <center>
            @Html.ActionLink("Create account", "Register", "Employer" , null, new { @class = "custom-link-color" })
        </center>
    </div>

</center>












