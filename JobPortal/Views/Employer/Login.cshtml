@model JobPortal.Models.UserModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<center>
    <h2>Welcome to Employer Login</h2>

    <div class="container-box-form">
        <h3>Login</h3>
        <hr>
        <div class="form-horizontal">
            @using (Html.BeginForm("Login", "Employer", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                if (ViewBag.Error != null)
                {
                    <span class="badge badge-danger">@ViewBag.error</span>
                }
                <div class="form-group">
                    @Html.LabelFor(model => model.email_id, htmlAttributes: new { @class = "control-label col-md-1" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.email_id, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.email_id, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.password, htmlAttributes: new { @class = "control-label col-md-1" })
                    <div class="col-md-10">
                        @Html.PasswordFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group text-center">

                    <input type="submit" value="Login" class="btn btn-default" />

                </div>
            }
        </div>
        <center>
            @Html.ActionLink("Create account", "Register", "Employer")
        </center>
    </div>

</center>



            

